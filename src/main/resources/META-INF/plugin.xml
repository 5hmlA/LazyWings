    <actions>
        <action class="jzy.taining.plugins.jspark.actions.BasicTempAction" description="基类UI实现模板" icon="/modules/sourceRoot.svg"
                id="jzy.jspark.basicui" text="BasicUI">
            <add-to-group anchor="first" group-id="NewGroup"/>
        </action>
        <action class="jzy.taining.plugins.jspark.actions.DartTempAction" description="基类UI实现模板" icon="/modules/sourceRoot.svg"
                id="jzy.jspark.sparkui" text="SparkUI">
            <add-to-group anchor="first" group-id="NewGroup"/>
        </action>
        <action class="jzy.taining.plugins.jspark.actions.ConvertAllToWebpAction" description="ConvertAllToWebpAction"
                id="jspark.june.webp" text="ConvertAllToWebpAction">
            <add-to-group anchor="first" group-id="NewGroup"/>
        </action>
        <action class="jzy.taining.plugins.jspark.actions.ProjectExport" description="ProjectExport"
                id="taining.jzy.export.project" text="PExport">
            <keyboard-shortcut first-keystroke="alt shift P" keymap="$default" second-keystroke="E"/>
            <keyboard-shortcut first-keystroke="control alt P" keymap="Mac OS X" second-keystroke="E"/>
            <add-to-group anchor="last" group-id="FileExportGroup"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.android.tools.idea.wizard.template">
        <wizardTemplateProvider implementation="jzy.taining.plugins.jspark.templates.SparkTemplatesProvider"/>
    </extensions>

